@!namespace("@ohos.runningLock", "runningLock")

@!sts_inject("""
static { loadLibraryWithPermissionCheck("power_manager_runninglock_taihe_native.z", "@ohos.runningLock") }""")

enum RunningLockType: i32 { PROXIMITY_SCREEN_CONTROL = 2 }

@class
interface RunningLock {
    Hold(timeout: i32): void;
    IsHolding(): bool;
    Unhold(): void;
}

@gen_async("create")
@gen_promise("create")
function CreateSync(name: String, type: RunningLockType): RunningLock;

function IsSupported(type: RunningLockType): bool;