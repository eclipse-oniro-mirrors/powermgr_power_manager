module_output_path = "${powermgr_part_name}/powermgr_native"

###############################################################################
config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "include",
    "mock",
  ]
}

deps_ex = [
  "ability_base:base",
  "ability_base:want",
  "eventhandler:libeventhandler",
  "common_event_service:cesfwk_innerkits",
  "ipc:ipc_core",
  "hiviewdfx_hilog_native:libhilog",
  "safwk:system_ability_fwk",
  "samgr:samgr_proxy",
  "sensor:sensor_interface_native",
  "c_utils:utils",
  "device_status:devicestatus_client",
  "display_manager:displaymgr",
  "bundle_framework:appexecfwk_base",
  "bundle_framework:appexecfwk_core",
]

##############################sttest##########################################

ohos_systemtest("test_power_st_mgr_mock") {
  module_out_path = module_output_path

  sources = [ "src/power_mgr_st_mock_test.cpp" ]

  configs = [
    "${powermgr_utils_path}:utils_config",
    ":module_private_config",
  ]

  deps = [
    "${powermgr_innerkits}:powermgr_client",
    "${powermgr_service_path}:powermgr_stub",
    "${powermgr_service_path}:powermgrservice",
    "${powermgr_service_path}/native/src/actions:powermgr_actions",
    "${powermgr_utils_path}:powermgr_utils",
    "//third_party/googletest:gmock_main",
    "//third_party/googletest:gtest_main",
  ]

  external_deps = deps_ex
}

