import("//build/test.gni")
import("../../../../powermgr.gni")

module_output_path = "${powermgr_part_name}/powermgr_native"

config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [ "include" ]
}

ohos_unittest("test_ffrt_utils") {
  module_out_path = module_output_path
  sources = [ "src/ffrt_utils_test.cpp" ]
  configs = [
    "${powermgr_utils_path}:utils_config",
    ":module_private_config",
    "${powermgr_utils_path}:coverage_flags",
  ]
  deps = [
    "${powermgr_utils_path}/ffrt:power_ffrt",
    "//third_party/googletest:gtest_main",
  ]
  external_deps = [
    "c_utils:utils",
    "ffrt:libffrt",
    "hilog:libhilog",
  ]
}

group("apitest") {
  testonly = true
  deps = [ ":test_ffrt_utils" ]
}
