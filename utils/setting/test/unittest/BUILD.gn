import("//base/powermgr/power_manager/powermgr.gni")
import("//build/test.gni")

module_output_path = "${powermgr_native_part_name}/powermgr_native"

###############################################################################
config("module_private_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "${powermgr_utils_path}/setting/include",
    "${powermgr_utils_path}/native/include",
    "//utils/native/base/include",
  ]
}

##############################unittest##########################################
ohos_unittest("test_power_setting") {
  module_out_path = module_output_path

  sources = [ "src/power_setting_test.cpp" ]

  configs = [ ":module_private_config" ]

  deps = [
    "${powermgr_utils_path}/setting:power_setting",
    "//foundation/aafwk/standard/interfaces/innerkits/dataobs_manager:dataobs_manager",
    "//third_party/googletest:gtest_main",
    "//utils/native/base:utils",
  ]

  external_deps = [
    "ability_base:want",
    "ability_base:zuri",
    "ability_runtime:ability_manager",
    "dataability:native_dataability",
    "hiviewdfx_hilog_native:libhilog",
    "relational_store:native_rdb",
    "safwk:system_ability_fwk",
    "samgr_standard:samgr_proxy",
  ]
}
